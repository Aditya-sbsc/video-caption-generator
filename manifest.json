  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "file_handlers": [
    {
      "action": "/?tab=video-upload",
      "accept": {
        "video/*": [".mp4", ".webm", ".mov", ".avi"]
      }
    },
    {
      "action": "/?tab=export",
      "accept": {
        "text/plain": [".srt", ".vtt", ".ass"],
        "application/json": [".json"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+caption",
      "url": "/?action=open&url=%s"
    }
  ],
  "share_target": {
    "action": "/?tab=video-upload",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "files": [
        {
          "name": "video",
          "accept": ["video/*"]
        }
      ]
    }
  }
}